@model IEnumerable<Mvc_EFCore2.Models.Aluno>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista de Alunos</h2>

<p>
    <a asp-action="Create">Criar Aluno</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Texto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Texto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AlunoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.AlunoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.AlunoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
