@model IEnumerable<Mvc_EFCore2.Models.Aluno>

<h1>Informações de Alunos e taxa de desconto</h1>


@if (!Model.Any())
{
    <p>Nãoo existem dados</p>
}
else
{
    <table class="table-bordered" border="1">
        <thead>
            <th style="padding: 10px;">Nome</th>
            <th style="padding: 10px;">Taxa de Desconto(%)</th>
        </thead>
        <tbody>
            @foreach (var aluno in Model)
            {
                <tr>
                    <td style="padding: 10px;">@Html.DisplayFor(m => aluno.Nome)</td>
                    <td style="padding: 10px;">@Html.DisplayFor(m => aluno.TipoSocio.TaxaDesconto) %</td>
                </tr>
            }
        </tbody>
    </table>
}